<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0B2"
    tools:context="com.example.android.book_hub.ResetPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_forgotpass"
        android:text="Bookish"
        android:textStyle="bold|italic"
        android:layout_marginTop="52dp"
        android:textSize="65dp"
        android:fontFamily="cursive"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/forgot_textview"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_forgotpass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:text="Forgot Password?"
        android:textColor="#000"
        android:textStyle="bold"        />

    <TextView
        android:id="@+id/description_textview"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:text="We Just Need Your Registered Email-Id to sent you Password Reset instructions"
        android:textColor="#000"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/forgot_email"
        style="@style/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:textColorHint="#000"
        android:textSize="16sp"
        android:layout_below="@id/description_textview"/>

    <Button
        android:id="@+id/resetpass_button"
        style="@style/button"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#FF9800"
        android:text="Reset Password"
        android:textSize="16dp"
        android:textColor="#000"/>

   <!-- <Button
        android:id="@+id/back_button"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        style="@style/button"
        android:layout_below="@id/resetpass_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="10dp"
        android:text="<<Back"
        android:textSize="16sp"
        android:background="#FF9800"
        android:textColor="#000"/>-->


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_below="@id/resetpass_button"/>

</RelativeLayout>
