<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.book_hub.SettingsActivity"
    android:gravity="center_horizontal"
    android:paddingTop="100dp"
    android:background="#FFE0B2"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are currently Signed in with:"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/signed_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#22018B"
            android:textSize="19sp"
            android:layout_margin="12dp"
            />



    <TextView
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_margin="12dp"
        android:textColor="#22018B"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â©2017-2018 Bookish Inc."
        android:layout_margin="12dp"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:layout_margin="12dp"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help? "
        android:textColor="#000000"
        android:textSize="17sp"/>

        <TextView
            android:id="@+id/faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read our FAQ section"
            android:textColor="#22018B"
            android:textSize="19sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Still having problems? "
            android:textColor="#000000"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:textColor="#22018B"
            android:textSize="19sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book-Hub Corp."
        android:layout_marginTop="50dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:textColor="#815300"
        android:textSize="22sp"/>

</LinearLayout>
